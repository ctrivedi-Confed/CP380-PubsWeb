@page
@model CP380_PubsWeb.Pages.Jobs.IndexModel
@{
    ViewData["Title"] = "Job Titles";
}

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Description</th>
            <th>Employees List</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model.Jobs)
            {
                <tr>
                    <td>@t.Job_id</td>
                    <td>@t.Job_desc</td>
                    <td>
                        <a class="page-link" asp-route-id="@t.Job_id" asp-page="../Employees/Index">
                            Employees
                        </a>
                    </td>
                </tr>
            }
    </tbody>
</table>
